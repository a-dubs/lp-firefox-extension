{
    "manifest_version": 3,
    "name": "LP Firefox Extension",
    "version": "1.0",
    "description": "made by a-dubs",
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "diff2html.min.js",
                "showdown.min.js",
                "content.js"
            ],
            "css": [
                "diff2html.min.css",
                "custom_styles.css"
            ],
            "run_at": "document_end" 
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "assets/cloud-64.png",
            "48": "assets/cloud-64.png",
            "128": "assets/cloud-64.png"
        }
    }
}